{
  "compilerOptions": {
    "module": "commonjs",
    "outDir": "dist",
    "target": "es5",
    "lib": [
      "es2015"
    ],
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}
